{
  "id": "openclaw-memory",
  "name": "OpenClaw Memory",
  "version": "0.2.1",
  "kind": "memory",
  "description": "MongoDB-backed long-term memory with Voyage AI embeddings (unified plugin)",
  "author": "Michael Lynn",
  "slots": ["memory"],
  "provides": {
    "tools": ["memory_search", "memory_remember", "memory_forget", "memory_list", "memory_status"],
    "gateway": ["memory.status", "memory.remember", "memory.recall", "memory.forget"],
    "hooks": [
      "auto-remember",
      "session-to-memory",
      "memory-bootstrap",
      "memory-enriched-tools",
      "pre-response-recall"
    ]
  },
  "configSchema": {
    "type": "object",
    "properties": {
      "daemonUrl": {
        "type": "string",
        "default": "http://localhost:7654",
        "description": "Memory daemon HTTP endpoint"
      },
      "agentId": {
        "type": "string",
        "default": "openclaw",
        "description": "Agent ID for memory storage"
      },
      "apiKey": {
        "type": "string",
        "description": "API key for daemon authentication (matches MEMORY_API_KEY on daemon)"
      },
      "projectId": {
        "type": "string",
        "description": "Project ID for multi-project memory isolation (optional)"
      },
      "defaultTtl": {
        "type": "number",
        "default": 2592000,
        "description": "Default TTL in seconds (30 days)"
      },
      "maxResults": {
        "type": "number",
        "default": 6,
        "description": "Max results for memory_search"
      },
      "minScore": {
        "type": "number",
        "default": 0.5,
        "description": "Minimum similarity score"
      },
      "autoStartDaemon": {
        "type": "boolean",
        "default": true,
        "description": "Auto-start daemon on gateway launch"
      },
      "hooksEnabled": {
        "type": "boolean",
        "default": true,
        "description": "Enable memory lifecycle hooks (auto-remember, session-to-memory, memory-bootstrap, memory-enriched-tools)"
      }
    }
  },
  "uiHints": {
    "apiKey": {
      "label": "API Key",
      "sensitive": true
    },
    "daemonUrl": {
      "label": "Daemon URL",
      "placeholder": "http://localhost:7654"
    },
    "agentId": {
      "label": "Agent ID",
      "placeholder": "openclaw"
    }
  }
}
