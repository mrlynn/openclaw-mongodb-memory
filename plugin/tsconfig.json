{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "types": ["node"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true
  },
  "include": ["index.ts", "lib/**/*.ts", "hooks/**/handler.ts"],
  "exclude": ["dist", "node_modules", "__tests__", "vitest.config.ts"]
}
